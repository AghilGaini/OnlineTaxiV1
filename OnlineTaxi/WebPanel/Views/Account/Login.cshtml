@model Domain.DTO.Account.LoginDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

<form asp-action="Login" asp-controller="Account">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Username" placeholder="نام کاربری" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" placeholder="رمز عبور" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ReturnUrl" />

    <button type="submit" class="btn btn-success">ورود</button>

</form>

