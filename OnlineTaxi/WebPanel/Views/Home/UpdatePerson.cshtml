@model Domain.DTO.Home.UpdatePersonDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="UpdatePerson" asp-controller="Home">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <input asp-for="Name" placeholder="نام" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="hidden" asp-for="Id" />
    </div>

    <button type="submit" class="btn btn-success">ذخیره</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-danger">بازگشت</a>

</form>

